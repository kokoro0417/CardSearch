<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.devMode" value="true"/>

	<package name="com.internousdev.cs.action" extends="struts-default">
		<action name="HomeAction" class="com.internousdev.cs.action.HomeAction" method="execute">
			<result name="success">Searchhome.jsp</result>
		</action>
		<action name="SearchAction" class="com.internousdev.cs.action.SearchAction" method="execute">
			<result name="success">SearchSuccess.jsp</result>
			<result name="error">Error.jsp</result>
		</action>

		<action name="BuyItemAction" class="com.internousdev.cs.action.BuyItemAction" method="execute">
			<result name="success">BuyItemSuccess.jsp</result>
			<result name="error">Error.jsp</result>
		</action>

		<action name="AdminLoginAction" class="com.internousdev.cs.action.AdminLoginAction" method="execute">
			<result name="success">AdminPage.jsp</result>
			<result name="error">Error.jsp</result>
		</action>

		<action name="StockAction" class="com.internousdev.cs.action.StockAction" method="execute">
			<result name="success">AdminPage.jsp</result>
			<result name="error">AdminPage.jsp</result>
		</action>

		<action name="CardAddAction" class="com.internousdev.cs.action.CardAddAction" method="execute">
			<result name="success">CAddConfirmation.jsp</result>
			<result name="error">AdminPage.jsp</result>
		</action>

		<action name="CAddDoneAction" class="com.internousdev.cs.action.CAddDoneAction" method="execute">
			<result name="success">AdminPage.jsp</result>
			<result name="error">AdminPage.jsp</result>
		</action>

		<action name="CAddCansellAction" class="com.internousdev.cs.action.CAddCansellAction" method="execute">
			<result name="success">AdminPage.jsp</result>
		</action>

	</package>

</struts>